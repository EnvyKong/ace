@model IEnumerable<ACE.Demo.Model.Investments.Investment>
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("投资", "Create", "Invest", null, new { @class="btn btn-default" })

<table class="table">
    <thead>
        <tr>
            <th>
                InvestmentId
            </th>
            <th>
                ProjectId
            </th>
            <th>
                AccountId
            </th>
            <th>
                Amount
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    @foreach (var investment in Model)
    {
        <tr>
            <td>
                @investment.InvestmentId
            </td>
            <td>
                @investment.ProjectId
        </td>
        <td>
            @investment.AccountId
        </td>
        <td>
            @investment.Amount
        </td>
        <td>
            @investment.Status
        </td>
    </tr>
    }

</table>